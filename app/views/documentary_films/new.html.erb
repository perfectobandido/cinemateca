<h1>Nuevo Documental</h1>

<%= form_with(model: @movie, url: movies_path, local: true) do |form| %>
  <%= render 'shared/errors', object: @movie %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :synopsis %>
    <%= form.text_area :synopsis %>
  </div>

  <div>
    <%= form.label :director %>
    <%= form.text_field :director %>
  </div>

  <div>
    <%= form.submit "Create Movie" %>
  </div>
<% end %>


<div class="d-flex justify-content-between align-items-center">
  <%= link_to 'Nuevo Documental', "/documentales/new", class: 'btn btn-primary' %>
  
</div>
<h1>Lista de Documentales</h1>
<ul>
  <% @documentary_films.each do |documentary| %>
    <li>
      <strong>Name:</strong> <%= documentary.name %><br>
      <strong>Synopsis:</strong> <%= documentary.synopsis %><br>
      <strong>Director:</strong> <%= documentary.director %>
    </li>
  <% end %>
</ul>
